@using Palitra27.Web.ViewModels.Products;

@model  CreateProductBrandAndCategoryAndDataViewModel;
@{
    ViewData["Title"] = "Create";
 Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <!-- Start Banner Area -->
    <section class="banner-area organic-breadcrumb">
        <div class="container">
            <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
                <div class="col-first">
                    <h1>Create Product</h1>
                    <nav class="d-flex align-items-center">
                        <a href="/Home/Index">Home<span class="lnr lnr-arrow-right"></span></a>
                        <a href="/Administration/Products/Create">Create Product</a>
                    </nav>
                </div>
            </div>
        </div>
    </section>
    <!-- End Banner Area -->

    <section class="section_gap">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div>
                        <h3 class="mb-30 d-flex justify-content-center">Create a Product</h3>
                    </div>
                    <hr class="bg-panda" style="height: 2px" />
                    <form method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        @Html.AntiForgeryToken()
                        <div class="col-md-12 form-group">
                            <input type="text" asp-for="CreateProductBindingModel.Name" placeholder="Product Name" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Product Name'" required="" class="single-input" value="@Model.CreateProductBindingModel.Name">
                        </div>
                        <div class="col-md-12 form-group">
                            <div class="form-select">
                                <select style="display: none;" asp-for="CreateProductBindingModel.Category">
                                    @if (Model.CreateProductBindingModel.Category != null)
                                    {
                                        <option selected="selected">@Model.BrandCategoryViewModel.Categories.FirstOrDefault(x => x.Name == Model.CreateProductBindingModel.Category)</option>
                                    }
                                    else
                                    {
                                        <option selected="selected" disabled="disabled">Choose Product Category</option>
                                    }
                                    @foreach (var category in Model.BrandCategoryViewModel.Categories)
                                    {
                                        <option value="@category.Name">@category.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-12 form-group">
                            <div class="form-select">
                                <select style="display: none;" asp-for="CreateProductBindingModel.Brand">
                                    @if (Model.CreateProductBindingModel.Brand != null)
                                    {
                                        <option selected="selected">@Model.BrandCategoryViewModel.Brands.FirstOrDefault(x => x.Name == Model.CreateProductBindingModel.Brand)</option>
                                    }
                                    else
                                    {
                                        <option selected="selected" disabled="disabled">Choose Product Brand</option>

                                    }
                                    @foreach (var brand in Model.BrandCategoryViewModel.Brands)
                                    {
                                        <option value="@brand.Name">@brand.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-12 form-group">
                            <input type="number" asp-for="CreateProductBindingModel.Price" placeholder="Price" min="1" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Price'" required="" class="single-input">
                        </div>
                        <div class="col-md-12 form-group">
                            <input type="file" data-val="true" asp-for="CreateProductBindingModel.Image" placeholder="Image URL" min="1" multiple onfocus="this.placeholder = ''" onblur="this.placeholder = 'URL'" required="" class="single-input" accept="image/x-png,image/gif,image/jpeg">
                        </div>
                        <div class="d-flex justify-content-center">
                            <button type="submit" value="submit" class="genric-btn info">Create Product</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
