@{
    ViewData["Title"] = "Create";
 Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container">
        <!-- Start Banner Area -->
        <section class="banner-area organic-breadcrumb">
            <div class="container">
                <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
                    <div class="col-first">
                        <h1>Find Product</h1>
                        <nav class="d-flex align-items-center">
                            <a href="/Home/Index">Home<span class="lnr lnr-arrow-right"></span></a>
                            <a href="/Administration/Products/Find">Find Product</a>
                        </nav>
                    </div>
                </div>
            </div>
        </section>
        <!-- End Banner Area -->

        <section class="section_gap">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div>
                            <h3 class="mb-30 d-flex justify-content-center">Find a Product</h3>
                        </div>
                        <hr class="bg-panda" style="height: 2px" />
                        <form action="#" method="post">
                            @Html.AntiForgeryToken()
                            <div class="col-md-12 form-group">
                                <input type="text" name="Id" placeholder="Id of desired product" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Id'" required="" class="single-input">
                            </div>
                            <div class="d-flex justify-content-center">
                                <button type="submit" value="submit" class="genric-btn info">Find Product</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>