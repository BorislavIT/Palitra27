@using Palitra27.Web.ViewModels.Categories;
@using Palitra27.Services.Data

@model CreateCategoryBindingModel;
@inject ICategoriesService categoriesService;

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <!-- Start Banner Area -->
    <section class="banner-area organic-breadcrumb">
        <div class="container">
            <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
                <div class="col-first">
                    <h1>Delete Category</h1>
                    <nav class="d-flex align-items-center">
                        <a href="/Home/Index">Home<span class="lnr lnr-arrow-right"></span></a>
                        <a href="/Administration/Categories/Delete">Delete Category</a>
                    </nav>
                </div>
            </div>
        </div>
    </section>
    <!-- End Banner Area -->

    <section class="section_gap">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div>
                        <h3 class="mb-30 d-flex justify-content-center">Delete a Category</h3>
                    </div>
                    <hr class="bg-panda" style="height: 2px" />
                    <form method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        @Html.AntiForgeryToken()
                        <div class="col-md-12 form-group">
                            <div class="form-select">
                                <select style="display: none;" asp-for="Name" class="justify-content-center">
                                    @if (Model != null)
                                    {
                                        <option selected="selected">@categoriesService.FindAllCategories().FirstOrDefault(x => x.Name == Model.Name)</option>
                                    }
                                    else
                                    {
                                        <option selected="selected" disabled="disabled">Choose Product Category</option>

                                    }
                                    @foreach (var category in categoriesService.FindAllCategories())
                                    {
                                        <option value="@category.Name">@category.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="d-flex justify-content-center">
                            <button type="submit" value="submit" class="genric-btn info">Delete Category</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>

