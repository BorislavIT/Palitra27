@using Palitra27.Web.ViewModels.Categories;

@model  CreateCategoryBindingModel;

@{
    ViewData["Title"] = "Create";
 Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <!-- Start Banner Area -->
    <section class="banner-area organic-breadcrumb">
        <div class="container">
            <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
                <div class="col-first">
                    <h1>Create Category</h1>
                    <nav class="d-flex align-items-center">
                        <a href="/Home/Index">Home<span class="lnr lnr-arrow-right"></span></a>
                        <a href="/Administration/Categories/Create">Create Category</a>
                    </nav>
                </div>
            </div>
        </div>
    </section>
    <!-- End Banner Area -->

    <section class="section_gap">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div>
                        <h3 class="mb-30 d-flex justify-content-center">Create a Category</h3>
                    </div>
                    <hr class="bg-panda" style="height: 2px" />
                    <form method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div class="col-md-12 form-group">
                            <input type="text" name="CategoryName" placeholder="Category Name" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Category Name'" required="" class="single-input">
                        </div>
                        <div class="d-flex justify-content-center">
                            <button type="submit" value="submit" class="genric-btn info">Create Category</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
