@using Palitra27.Web.ViewModels.Products;

@model  ProductBrandCategoryViewModel;

@{
    ViewData["Title"] = "Create";
 Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <!-- Start Banner Area -->
    <section class="banner-area organic-breadcrumb">
        <div class="container">
            <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
                <div class="col-first">
                    <h1>Create Product</h1>
                    <nav class="d-flex align-items-center">
                        <a href="/Home/Index">Home<span class="lnr lnr-arrow-right"></span></a>
                        <a href="/Admin/Create">Create Product</a>
                    </nav>
                </div>
            </div>
        </div>
    </section>
    <!-- End Banner Area -->

    <section class="section_gap">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div>
                        <h3 class="mb-30 d-flex justify-content-center">Create a Product</h3>
                    </div>
                    <hr class="bg-panda" style="height: 2px" />
                    <form action="#" method="post">
                        <div class="col-md-12 form-group">
                            <input type="text" name="ProductName" placeholder="Product Name" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Product Name'" required="" class="single-input">
                        </div>
                        <div class="col-md-12 form-group">
                            <div class="form-select">
                                <select style="display: none;" name="Category">
                                    <option selected="selected" disabled="disabled">Choose Product Category</option>
                                    @foreach (var category in Model.Categories)
                                    {
                                        <option value="@category.Name">@category.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-12 form-group">
                            <div class="form-select">
                                <select style="display: none;" name="Brand">
                                    <option selected="selected" disabled="disabled">Choose Product Brand</option>
                                    @foreach (var brand in Model.Brands)
                                    {
                                        <option value="@brand.Name">@brand.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-12 form-group">
                            <input type="number" name="Price" placeholder="Price" min="1" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Price'" required="" class="single-input">
                        </div>
                        <div class="col-md-12 form-group">
                            <input type="text" name="Image" placeholder="Image URL" min="1" onfocus="this.placeholder = ''" onblur="this.placeholder = 'URL'" required="" class="single-input">
                        </div>
                        <div class="d-flex justify-content-center">
                            <button type="submit" value="submit" class="genric-btn info">Create Product</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
